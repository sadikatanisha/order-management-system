 <!-- form handling -->
 <form action="/api/orders" method="POST" id="add_order">
    <div class="new_order">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="contact" class="text-light">Contact Number</label>
            <input type="tel" name="contact" value="" placeholder="Enter your contact number">
        </div>
        <div class="form-group">
            <label for="address" class="text-light">Address</label>
            <input type="text" name="address" value="" placeholder="Enter your address">
        </div>
        <div class="form-group">
            <label for="dressCode" class="text-light">Dress Code</label>
            <input type="text" name="dressCode" value="" placeholder="Enter dress code">
        </div>
        <div class="form-group">
            <label for="totalAmount" class="text-light">amount</label>
            <input type="text" name="totalAmount" value="" placeholder="Enter total ammount">
        </div>



        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>